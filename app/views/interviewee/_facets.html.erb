<% # main container for facets/limits menu -%>
<div id="facets" class="facets sidenav facets-toggleable-md">
  <div class="top-panel-heading panel-heading facets-header">
    <h2 class='facets-heading'>
      <%= t('blacklight.search.facets.title') %>
    </h2>

    <button
      class="navbar-toggler navbar-toggler-right"
      type="button" data-toggle="collapse"
      data-target="#facet-panel-collapse"
      aria-controls="facet-panel-collapse"
      aria-expanded="false"
      aria-label="Toggle facets">
        <span class="navbar-toggler-icon"></span>
    </button>

  </div>

  <div id="facet-panel-collapse" class="panel-group facets-collapse collapse">
    <%= render_facet_partials %>
  </div>

</div>